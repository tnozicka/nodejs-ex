#!/usr/bin/groovy

def k8s_token = '<unknown>'

node ('master') {
    k8s_token = readFile '/var/run/secrets/kubernetes.io/serviceaccount/token'
}

node ('redhatdistortion-nodejs') {
    def k8s_namespace = readFile '/var/run/secrets/kubernetes.io/serviceaccount/namespace'

    stage 'Checkout'
    checkout scm

    sh "oc login https://kubernetes.default/ --token=${k8s_token} --certificate-authority=/run/secrets/kubernetes.io/serviceaccount/ca.crt"
    // Prepare the deployments so you can see pipeline in console overview when running for the first time
    // Deleting route first is a bugfix for https://github.com/openshift/origin/pull/9425 not getting into latest OpenShift release
    sh 'template=$(oc process -f .openshift-ci_cd/empty-deployment-template.yaml -v "APP_NAME=nodejs-ex-dev") && (echo ${template} | oc get -f - 1>/dev/null 2>&1) || ((oc delete route nodejs-ex-dev 1>/dev/null 2>&1 || true) && echo ${template} | oc apply -f -)'

    stage 'Deploy MongoDB'
    sh 'oc process -f .openshift-ci_cd/mongodb-deployment-template.yaml | oc apply -f -'

    stage 'Create Image'
    sh 'oc delete bc nodejs-ex || true'  // Bugfix for https://github.com/openshift/origin/issues/9301
    sh 'oc process -f https://github.com/tnozicka/openshift-templates/raw/master/binary-build-template.yaml -v "APP_NAME=nodejs-ex,BUILDER_IMAGE=registry.access.redhat.com/openshift3/nodejs-010-rhel7,OUTPUT_IMAGESTREAM_TAG=nodejs-ex:latest" | oc apply -f -'
    sh 'oc start-build nodejs-ex --from-repo=. --follow'

    stage 'Deploy to dev'
    sh 'oc delete route nodejs-ex-dev || true'  // Bugfix for https://github.com/openshift/origin/pull/9425 not getting into latest OpenShift release
    sh "oc process -f .openshift-ci_cd/deployment-template.yaml -v 'APP_NAME=nodejs-ex-dev,IMAGE_STREAM_NAMESPACE=${k8s_namespace},IMAGE_STREAM_TAG=nodejs-ex:latest' | oc apply -f -"
    sh 'oc annotate is nodejs-ex misc_$(date +%s)=foo || true'  // Hack for 0-2 minute pause caused by https://github.com/openshift/origin/issues/9018

    stage 'Run Integration Tests'
    sh 'npm config set prefix=$HOME/node && export PATH=$HOME/node/bin:$PATH && npm install -r package.json'
    sh "IP=`oc get route nodejs-ex-dev -n ${k8s_namespace} -o go-template=\'{{.spec.host}}\'` node_modules/mocha/bin/mocha --timeout 5000 tests/app_test.js --reporter xunit | tee report.xml"
    // The first three lines in report.xml is not valid xml hence removing it to make it valid
    sh 'sed -i -e 1,3d report.xml'
    archive 'report.xml'
    step([$class: 'JUnitResultArchiver', testResults: 'report.xml'])
}
